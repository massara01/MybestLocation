<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE3E2"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:text="Ajout"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        tools:text="Ajout" />

    <EditText
        android:id="@+id/logtitude_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:gravity="center"
        android:hint="longtitude"
        android:inputType="text"
        android:textColor="#8166AF"
        android:textColorHint="#E1769A" />

    <EditText
        android:id="@+id/latitude_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:gravity="center"
        android:hint="latitude"
        android:inputType="text"
        android:textColorHint="#E1769A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="#E91E63"
            android:text="NOUVEAU" />

        <Button
            android:id="@+id/map_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="#82D2F6"
            android:text="MAP" />
    </LinearLayout>

    <EditText
        android:id="@+id/desc_ed"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:ems="10"
        android:hint="Description de l'emplacement"
        android:inputType="text"
        android:textColorHint="#E1769A" />
</LinearLayout>